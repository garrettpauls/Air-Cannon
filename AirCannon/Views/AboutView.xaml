<UserControl x:Class="AirCannon.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:AirCannon="clr-namespace:AirCannon"
             Padding="10">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="2 4 2 4" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
	<StackPanel>
        <TextBlock FontSize="20">
            Air Cannon
        </TextBlock>
        <TextBlock FontSize="13" Text="{Binding Path=Version, Source={x:Static Application.Current}}" />
		<TextBlock FontSize="16">
			Icons from Mark James'
			<Hyperlink NavigateUri="http://www.famfamfam.com/lab/icons/silk/" RequestNavigate="_HandleRequestNavigate">Silk icon set 1.3</Hyperlink>
		</TextBlock>
	</StackPanel>
</UserControl>