<Window x:Class="AirCannon.Services.UserInteractionServicePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="mMessage" Margin="10" TextWrapping="Wrap" />
        <ItemsControl ItemsSource="{Binding Options}" Grid.Row="1">
            <ItemsControl.Resources>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="75" />
                    <Setter Property="Padding" Value="10 0 10 0" />
                    <Setter Property="Margin" Value="5 5 5 5" />
                    <Setter Property="HorizontalAlignment" Value="Right" />
                </Style>
            </ItemsControl.Resources>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Click="_HandleOptionButtonClick"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" FlowDirection="RightToLeft" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
